<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser" parallel="tests" thread-count="3">
	
  <test name="End to End Test (Chrome)">
  <parameter name="browser" value="Chrome"></parameter>
    <classes>
      <class name="com.mystore.testcases.LoginPageTest"/>
      <class name="com.mystore.testcases.IndexPageTest"/>
    </classes>
  </test> <!-- Test -->
  
  <test name="End to End Test (FireFox)">
  <parameter name="browser" value="FireFox"></parameter>
    <classes>
      <class name="com.mystore.testcases.LoginPageTest"/>
      <class name="com.mystore.testcases.IndexPageTest"/>
    </classes>
  </test> <!-- Test -->

  <test name="End to End Test (Edge)">
  <parameter name="browser" value="Edge"></parameter>
    <classes>
      <class name="com.mystore.testcases.LoginPageTest"/>
      <class name="com.mystore.testcases.IndexPageTest"/>
    </classes>
  </test> <!-- Test -->
  
</suite> <!-- Suite -->
